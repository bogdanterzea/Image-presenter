<component name="HomeScreen" extends="Group" initialFocus="content_list" >
    <script type="text/brightscript" uri="HomeScreen.brs" />
    <script type="text/brightscript" uri="AppTheme.brs" />
    <children>
        <label id="title_label"
            height="60"
            width="440"
            translation="[470,50]" />
        <label id="description_label"
            translation="[150,130]"
            height="1000"
            width="900"
            wrap="true"/>
        <rowList id="content_list"
            visible="true"
            itemComponentName="RowItem"
            focusBitmapUri="pkg:/images/focus_indicator.9.png"
            translation="[150,360]"
            itemSize="[1020,300]"
            rowItemSize="[ [250, 150] ]"
            rowItemSpacing="[ [5, 0] ]"
            itemSpacing="[0,20]"
            rowLabelOffset="[[0,15]]"
            showRowLabel="[true]" />
        <DetailScreen id="DetailScreen" visible="false" />
    </children>
</component>

<component name="DetailScreen" extends="Focusable">
    <interface>
        <field id="content" type="node" onChange="onContentChanged" />
    </interface>

    <script type="text/brightscript" uri="DetailScreen.brs" />
    <script type="text/brightscript" uri="pkg:/components/AppTheme.brs" />
    <script type="text/brightscript" uri="pkg:/components/services/NavigateFunctions.brs" />

    <children>
        <poster id="background_poster" width="1280" height="720" />
        <rectangle id="details_rectangle" translation="[0,520]" height="250" width="1280" visible="false">
            <label id="title" translation="[30,20]" />
            <label id="description" translation="[30,60]" height="1000" width="1230" wrap="true" />
        </rectangle>
        <label id="instructions_text" text="Press OK for details" translation="[506,690]" />
    </children>
</component>

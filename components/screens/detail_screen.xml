<component name="detail_screen" extends="Group" >
    <interface>
        <field id="content" type="node" onChange="onContentChanged" />
    </interface>

    <script type="text/brightscript" uri="detail_screen.brs" />
    <script type="text/brightscript" uri="pkg:/components/AppTheme.brs" />

    <children>
        <poster id="poster" width="1920" height="1080" />
        <rectangle id="rectangle" translation="[40,70]" height="200" width="900" visible="false" >
            <label id="title" translation="[30,20]" />
            <label id="description" translation="[30,50]" height="1000" width="900" wrap="true" />
        </rectangle>
    </children>
</component>
